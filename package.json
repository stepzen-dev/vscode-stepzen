{
  "name": "vscode-stepzen",
  "displayName": "StepZen: GraphQL Toolkit",
  "description": "Build, explore, and deploy StepZen GraphQL schemas without leaving VS Code.",
  "keywords": [
    "stepzen",
    "graphql"
  ],
  "version": "0.1.2",
  "repository": {
    "type": "git",
    "url": "https://github.ibm.com/carlose-ibm/stepzen-tools"
  },
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "workspaceContains:stepzen.config.json"
  ],
  "contributes": {
    "commands": [
      {
        "command": "stepzen.initializeProject",
        "title": "Initialize Project",
        "category": "StepZen"
      },
      {
        "command": "stepzen.deploy",
        "title": "Deploy Project",
        "category": "StepZen"
      },
      {
        "command": "stepzen.runRequest",
        "title": "Run GraphQL Request",
        "category": "StepZen"
      },
      {
        "command": "stepzen.openExplorer",
        "title": "Open Query Explorer",
        "category": "StepZen"
      },
      {
        "command": "stepzen.goToDefinition",
        "title": "Go to Definition",
        "category": "StepZen"
      },
      {
        "command": "stepzen.addMaterializer",
        "title": "Add Materializer",
        "category": "StepZen"
      },
      {
        "command": "stepzen.openSchemaVisualizer",
        "title": "Open Schema Visualizer",
        "category": "StepZen"
      },
      {
        "command": "stepzen.generateOperations",
        "title": "Generate Operations from Schema",
        "category": "StepZen"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "stepzen.initializeProject",
          "group": "0_stepzen@1"
        }
      ],
      "editor/context": [
        {
          "command": "stepzen.goToDefinition",
          "when": "editorLangId == graphql && editorTextFocus",
          "group": "0_stepzen@1"
        },
        {
          "command": "stepzen.addMaterializer",
          "when": "editorLangId == graphql && editorTextFocus",
          "group": "0_stepzen@2"
        },
        {
          "command": "stepzen.openSchemaVisualizer",
          "when": "editorLangId == graphql && editorTextFocus",
          "group": "0_stepzen@3"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  },
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": false
    }
  },
  "dependencies": {
    "graphql": "^16.11.0"
  }
}
